  "seaweedsoup": {
    "name": "미역국",
    "color": "#2e8b57", 
    "servings": 2,
    "ingredients": [
      { "name": "미역", "amount": 10, "unit": "g", "calories_per_unit": 3 },
      { "name": "소고기", "amount": 100, "unit": "g", "calories_per_unit": 250 },
      { "name": "물", "amount": 500, "unit": "ml", "calories_per_unit": 0 },
      { "name": "소금", "amount": 5, "unit": "g", "calories_per_unit": 0 }
    ],
    "instructions": [
      {
        "step": 1,
        "description": "미역을 물에 불려둡니다."
      },
      {
        "step": 2,
        "description": "소고기의 핏물을 제거합니다."
      },
      {
        "step": 3,
        "description": "참기름을 두른 팬에 소고기를 볶습니다."
      },
      {
        "step": 4,
        "description": "불린 미역의 물기를 제거하고 팬에 넣어 3분 정도 볶습니다."
      },
      {
        "step": 5,
        "description": "볶은 고기와 미역을 냄비에 옮기고 쌀뜨물을 부어줍니다."
      },
      {
        "step": 6,
        "description": "다진 마늘과 국간장을 넣고, 꽃소금으로 간을 맞춥니다."
      },
      {
        "step": 7,
        "description": "중불에서 10분, 약불에서 20분 정도 끓여줍니다."
      }
    ]
  },
